<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.MyTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#FFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>

        <item name="android:textColorSecondary">@color/black</item>

    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
        <item name="android:popupBackground">#FFF</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- Light theme customization for BottomNavigationView -->
    <style name="BottomNavStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="itemIconSize">28dp</item>
        <item name="itemPaddingTop">7dp</item>
        <item name="itemPaddingBottom">7dp</item>
        <item name="textFillColor">@drawable/sl_nav_selected_icon</item>
        <item name="itemIconTint">@drawable/sl_nav_selected_icon</item>
        <item name="itemTextColor">@drawable/sl_nav_selected_icon</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@color/gray_trans</item>
    </style>

    <style name="BottomNavPhotoStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="itemIconSize">28dp</item>
        <item name="itemPaddingTop">7dp</item>
        <item name="itemPaddingBottom">7dp</item>
        <item name="textFillColor">#000</item>
        <item name="itemIconTint">#000</item>
        <item name="itemTextColor">#000</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@color/gray_trans</item>
    </style>

    <style name="MyIconButtonCancelStyle" parent="Widget.Material3.Button.IconButton" >
        <item name="icon">@drawable/ic_close_24</item>
        <item name="endIconCheckable">false</item>
        <item name="iconTint">?attr/colorSecondary</item>
    </style>

</resources>