<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_login_background"
    tools:context=".privacy.PrivacyLoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarForPrivacyPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/privacy_authentication"
        app:titleMarginStart="30dp"/>

    <ImageView android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_privacy_login_24"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="@string/please_fill_out_your_password_to_confirm_the_authentication"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="fill_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:id="@+id/passwordField"
            android:layout_weight="5"
            android:padding="10dp"
            android:background="@drawable/round_corner_widget"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/showHideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:background="@drawable/round_corner_widget"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <Button
            android:id="@+id/login_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/round_corner_widget"/>

        <Button
            android:id="@+id/login_Forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/round_corner_widget"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:text="@string/finding_other_methods"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/login_FingerprintLogin"
            android:layout_width="60dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:contentDescription="@string/finger_print"
            android:src="@drawable/ic_login_fingerprint_24"
            android:background="@drawable/round_corner_widget"/>

        <ImageButton
            android:id="@+id/login_PatternLogin"
            android:layout_width="60dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:contentDescription="@string/pattern"
            android:src="@drawable/ic_login_pattern_24"
            android:background="@drawable/round_corner_widget"/>

    </LinearLayout>



</LinearLayout>