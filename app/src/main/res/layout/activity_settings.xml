<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Settings"
        app:titleMarginStart="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:layout_weight="1">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sTrashMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Move to trash when delete"
            android:textSize="18sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sNightMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/relChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/changeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change time lapse slideshow "
                android:textColor="?attr/colorSecondary"
                android:textSize="18sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/timeSlideshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After 2 seconds"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtAppInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:gravity="center">

        <View
            android:id="@+id/settingDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="?attr/colorOnSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.0"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by Infinity Team"
            android:textSize="15sp"/>
    </LinearLayout>



</LinearLayout>